TARGET = psp7800
PSPSDK = $(shell psp-config --pspsdk-path)
PSPBIN = $(shell psp-config --psp-prefix)/bin
SDL_CONFIG = $(PSPBIN)/sdl-config
OBJS =  \
  psp_main.o psp_kbd.o psp_gu.o psp_sdl.o psp_font.o \
  psp_fmgr.o psp_menu.o  psp_menu_kbd.o psp_battery.o psp_menu_set.o \
  psp_menu_help.o psp_sound.o psp_irkeyb.o \
  Sound.o \
  global.o \
  psp_menu_cheat.o \
  psp_menu_list.o \
  psp_editor.o \
  psp_irkeyb.o \
  psp_danzeff.o \
  psp_atari.o \
  Bios.o \
  Database.o \
  Common.o \
  Cartridge.o \
  Hash.o \
  Logger.o \
  Maria.o \
  Memory.o \
  Palette.o \
  Pokey.o \
  ProSystem.o \
  Region.o \
  Riot.o \
  Sally.o \
  Tia.o \
  zip/miniunz.o \
  zip/unzip.o \
  zip/zip.o \
  zip/ioapi.o \
  Archive.o

DEFAULT_CFLAGS = $(shell $(SDL_CONFIG) --cflags)

PSP_FW_VERSION=15
PSP7800_VERSION=1.2.0-fw15

MORE_CFLAGS = -I. -Izip \
 -funroll-loops -ffast-math -fomit-frame-pointer \
 -fno-strength-reduce -finline-functions \
 -fsingle-precision-constant \
 -DNOCRYPT \
 -DPSP7800_VERSION=\"$(PSP7800_VERSION)\" \
 -DUSE_PSP_IRKEYB \
 -DNO_STDIO_REDIRECT

OPTIM_CFLAGS= -O3

CFLAGS = $(DEFAULT_CFLAGS) $(MORE_CFLAGS)
CXXFLAGS = $(DEFAULT_CFLAGS) $(MORE_CFLAGS) -fno-exceptions -fno-rtti

LIBS += -lpspirkeyb -lSDL_image -lSDL -lpng -ljpeg -lpspaudio -lpspgu -lpsppower -lpsphprm -lz -lm -lstdc++


EXTRA_TARGETS  = EBOOT.PBP
PSP_EBOOT_TITLE= PSP7800-v$(PSP7800_VERSION)
PSP_EBOOT_ICON = psp7800.png
PSP_EBOOT_SND0 = psp7800.at3
PSP_EBOOT_PIC1 = psp7800-pic.png

include $(PSPSDK)/lib/build.mak

all: SCEkxploit

.c.o:
	$(CC) $(CFLAGS) $(OPTIM_CFLAGS) -c -o $@ $<

.cpp.o:
	$(CXX) $(CXXFLAGS) $(OPTIM_CFLAGS) -c -o $@ $<


psp_gu.o : psp_gu.c
	$(CC) -c $< $(CFLAGS) -O0 -o $@

install: all
	@mkdir -p /media/usbdisk/psp/game150/__SCE__psp7800/
	@mkdir -p /media/usbdisk/psp/game150/%__SCE__psp7800/
	cp __SCE__psp7800/EBOOT.PBP /media/usbdisk/psp/game150/__SCE__psp7800/
	cp %__SCE__psp7800/EBOOT.PBP /media/usbdisk/psp/game150/%__SCE__psp7800/

realclean:
	/bin/rm -f $(OBJS) EBOOT.PBP PARAM.SFO

